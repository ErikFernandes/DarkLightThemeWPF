<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- File that defines the colors that should be dynamically changed according to the theme -->
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DefaultStyles;component/Styles/ControlsColor/ControlsSourceLight.xaml" />
    </ResourceDictionary.MergedDictionaries>

    
    <SolidColorBrush x:Key="BackgroundColor" Color="{DynamicResource DynamicBackground}"/>
    
</ResourceDictionary>